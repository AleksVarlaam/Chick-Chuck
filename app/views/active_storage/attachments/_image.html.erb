<%= turbo_frame_tag dom_id(image) do %>
    <div
        class="duration-700 ease-in-out absolute inset-0 transition-all text-center"
        data-carousel-target="slide"
    >
        <% if (user_signed_in? || admin_signed_in?) && ['edit', 'update'].include?(action_name) %>
            <%= link_to active_storage_attachment_path(image),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this image?" },
                remote: :true,
                class: "justify-content-end absolute z-20 bg-gray-100 right-0 rounded-md text-red-700 p-1 m-1" do
            %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            <% end %>
        <% end %>
        
        <%= image_tag(action_name != 'index' ? large(image) : medium(image), 
            class: "rounded-t-lg h-full w-full object-cover absolute block ", 
            alt: "Slide #{image.id}")
        %>
    </div>
<% end %>