<!DOCTYPE html>
<html class="h-full bg-gray-50 scroll-smooth" lang="<%= I18n.locale%>">
  <head>
    <title><%= full_title(yield(:page_title)) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <!-- CSRF & stylesheets -->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <!-- Favicon -->
    <%= favicon_link_tag asset_path('icons/chick-chuck/chick-chuck-favicon.png'), class: 'w-100 h-100'%>
    <!-- Current user -->
    <%= render 'layouts/current_user_meta'%>
  </head>

  <body class="flex flex-col h-screen w-screen justify-between">
      <% if user_signed_in? %>
        <%= turbo_stream_from "broadcast_to_user_#{current_user.id}" %>
      <% end %>
      <!-- Header -->
      <%= yield :navbar%>
      <!-- Main -->
      <main class="flex w-full grid grid-flow-row auto-rows-max relative <%= 'mt-20' unless controller_name == 'errors' %>" id="top">
          <!-- Flash messages -->
          <% unless ['new', 'create'].include?(action_name) %>
              <%= tag.div (render 'shared/flash_messages'), class: "fixed right-3 sm:right-6 sm:top-20 z-30 sm:max-w-sm'", id: "flash_messages"%>
          <% end %>
          <!-- Modal -->
          <%= turbo_frame_tag 'modal'%>
          <!-- Content -->
          <div class="min-h-screen relative overflow-x-hidden">
              <%= yield %>
          </div>
      </main>      
      <!-- Footer -->
      <%= yield :footer %>
  </body>
</html>
