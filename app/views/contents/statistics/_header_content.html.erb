<section class="relative flex">
    <div class="container flex flex-col justify-center w-full pt-6 mx-auto">
        <div class="lg:px-32 lg:flex lg:items-center">
            <div class="lg:w-2/3 lg:px-10 mb-6">
                <!-- Title -->
                <%= tag.h1 t('about.header.title'), class: "text-2xl font-semibold text-gray-800 text-center" %>
                <!-- Description -->
                <%= tag.p t('about.header.desc'), class: "w-full mt-6 text-gray-500" %>
                <!-- Founder name -->
                <%= tag.h3 t('about.header.founder_name'), class: "mt-6 text-lg font-medium text-blue-500"%>
                <!-- Founder title -->
                <%= tag.p t('about.header.founder_title'), class: "text-gray-600"%>
            </div>
            <!-- Image -->
            <div class="w-auto lg:w-1/3 h-[20rem] sm:h-[30rem] lg:h-auto flex justify-center lg:block">
                <%= image_tag 'about/owner-Aleksandr.png', class: "object-cover object-center rounded-lg h-full"%>
            </div>
        </div>
    </div>
</section>