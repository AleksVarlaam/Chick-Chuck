<% currently_at t('product.user_products', user_name: @user.user_name) %>
<% provide :page_title, t('product.user_products', user_name: @user.user_name) %>

<!-- About seller -->
<%= tag.section class: "mx-5 my-3 flex flex-col items-center" do %>
    <!-- Avatar -->
    <%= image_tag(@user.avatar_attachment_path, class: "object-cover w-20 h-20 mx-2 mb-3 rounded-full border border-white", alt: "avatar")%>
    <!-- Name -->
    <%= tag.h4 class: "font-medium text-2xl text-center hover:underline text-gray-800" do %>
        <%= link_to user_modal_path(@user), data: { turbo_frame: 'modal' }, class: 'flex items-center' do %>
            <%= @user.user_name %>
            <%= heroicon 'cursor-arrow-rays', class: "ml-1 w-6 h-6 text-orange-700 hover:text-gray-800" %>
        <% end %>
    <% end %>
<% end %>

<!-- Products section -->
<%= tag.section class: "grid grid-flow-row auto-rows-max flex w-full px-2" do %>
    <!-- Title -->
    <%= tag.h4 t('product.user_products', user_name: nil), class: 'capitalize text-3xl font-semibold text-gray-800 mb-6 text-center'%>
    <!-- Filter -->
    <%= render 'filter', path: user_products_path(@user)%>
    <!-- Products -->
    <% if @products.present? %>
        <%= turbo_frame_tag 'products',
            class: "grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 justify-center mx-auto w-full container" do 
        %>
            <%= render partial: 'contents/products/product', collection: @products%>
        <% end %>
        <%== pagy_nav(@pagy) if Product.count > 7%>
    <% else %>
        <%= render 'contents/shared/unavailable', model: t('product.all_products')%>
    <% end %>
<% end %>