<!-- Latest Trucks section -->
<div class="items-center flex container mx-auto w-full justify-center relative" id="latest_trucks_title">
    <!-- Title -->
    <%= tag.h3 "#{t('home_page.latest_trucks')} #{action_name == 'company_trucks' ? @company.title : ''}", 
        class: 'text-3xl font-semibold text-gray-800  my-6 text-center'%>
    <!-- View all -->
    <%= link_to trucks_path, class: "absolute w-[7rem] sm:w-full flex py-0 text-base font-medium justify-end items-center text-end text-gray-500 hover:text-gray-700 hover:underline rtl:left-0 lrt:right-0", 
        data: {turbo_frame: '_top'} do %>
        <%= t('global.view_all')%>
        <%= heroicon I18n.locale == :he ? 'arrow-small-left' : 'arrow-small-right', 
            class: "w-5 h-5 ltr:ml-2 rtl:mr-2"%>
    <% end if ['index', 'main'].eql?([action_name, controller_name])%>
</div>