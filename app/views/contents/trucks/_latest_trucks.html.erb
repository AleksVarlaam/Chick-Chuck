<%= render 'latest_trucks_title' %>
<% if @trucks.present?%>
    <%= turbo_frame_tag 'latest_trucks', class: "container sm:mx-auto grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 justify-center mb-6" do %>
        <!-- Trucks -->
        <%= render partial: 'contents/trucks/truck', collection: @trucks%>
    <% end %>
    <!-- Pagy -->
    <%== pagy_nav(@pagy) if @trucks_count > 8%>
<% else %>
    <%= render 'contents/shared/unavailable', model: t('home_page.latest_trucks').split(' ').last%>
<% end %>