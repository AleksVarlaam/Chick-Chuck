<!-- Latest Trucks section -->
<div class="items-center flex container mx-auto w-full justify-center relative" id="latest_trucks_title">
    <!-- Title -->
    <%= tag.h3 t('home_page.latest_trucks'), class: 'text-3xl font-semibold text-gray-800  my-6 text-center'%>
    <!-- View all -->
    <%= link_to contents_trucks_path, class: "absolute w-[7rem] sm:w-full right-0 flex py-0 mr-2 text-base font-medium justify-end items-center text-end text-gray-500 hover:text-gray-700 hover:underline", data: {turbo_frame: '_top'} do %>
        <%= t('global.view_all')%>
        <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
    <% end if ['index', 'main'].eql?([action_name, controller_name])%>
</div>

<% if @trucks.present?%>
    <%= turbo_frame_tag 'latest_trucks', class: "container sm:mx-auto grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 justify-center mb-6" do %>
        <!-- Trucks -->
        <%= render partial: 'contents/trucks/truck', collection: @trucks%>
        <!-- If trucks is empty -->
        <%= tag.p 'Truck with this criterion does not yet exist on our website or it is in the top offers', 
            class: 'col-span-full text-center text-base' if @trucks.empty?%>
    <% end %>
    <!-- Pagy -->
    <%== pagy_nav(@pagy_a) if Truck.count > 7%>
<% else %>
    <%= render 'contents/shared/unavailable', model: t('home_page.latest_trucks').split(' ').last%>
<% end %>