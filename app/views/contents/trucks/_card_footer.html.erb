<hr class="mt-2">
<div class="flex items-center justify-center py-3">
    <!-- Avatar -->
    <%= image_tag(truck.company.avatar_attachment_path,
        class: "object-cover h-7 w-7 rounded-full border border-gray-500 m-1", alt: "avatar")%>

    <!-- Company_name and link_to company-->
    <% if ['show', 'trucks'].eql?([action_name, controller_name]) %>
        <%= link_to user_path(truck.company), data: { turbo: false }, class: 'flex items-center hover:underline' do %>
            <%= tag.h3 truck.company.title, class: "text-2xl text-gray-700" %>
            <%= heroicon 'cursor-arrow-rays', class: "ml-1 w-6 h-6 text-orange-700 hover:text-gray-800" %>
        <% end %>
    <% else %>
        <%= link_to user_modal_path(truck.company), data: { turbo_frame: 'modal' }, class: 'flex items-center hover:underline' do %>
            <%= tag.h3 truck.company.title, class: "text-2xl text-gray-700" %>
            <%= heroicon 'cursor-arrow-rays', class: "ml-1 w-6 h-6 text-orange-700 hover:text-gray-800" %>
        <% end %>
    <% end %>    
</div>