<% currently_at t('pages.trucks') %>
<% provide :page_title, t('pages.trucks') %>


<%= tag.section class: "grid grid-flow-row auto-rows-max flex w-full px-2" do %>
    <!-- Filter -->
    <%= tag.div (render 'contents/trucks/trucks_filter', path: trucks_path, company: nil), class: 'mt-8'%>
    <!-- Trucks -->
    <%= turbo_frame_tag 'trucks',
        class: "grid grid-flow-row auto-rows-max flex w-full px-2" do 
    %>
        <!-- Top trucks -->
        <%= render 'top_trucks'%>
        <!-- Latest trucks -->
        <%= render 'latest_trucks'%>
    <% end %>
<% end %>