<!-- News header -->
<div class="flex items-center py-4 my-4 border-b border-b-gray-400 w-full">
    <div class="flex items-center">
        <%= image_tag(@new.admin.avatar_attachment_path, class: 'w-8 h-8 object-cover rounded-full mr-2')%>
        <!-- Created at -->
        <%= tag.p @new.admin.user_name, class: "text-base text-gray-500 border-r border-r-gray-500 pr-3 mr-3 hover:text-gray-700 hover:underline"%>
    </div>
    <!-- Created at -->
    <div class="flex items-center">
        <%= image_tag(asset_path('icons/icons8-calendar-64.png'), class: 'w-4 h-4 object-cover  mr-1')%>
        <%= tag.p @new.created_at, 
            class: "text-base text-gray-500 border-r border-r-gray-500 pr-3 mr-3 hover:text-gray-700 hover:underline"%>
    </div>
    <!-- Comments count -->
    <%= link_to '#comments_title', class: "flex items-center", data: {controller: "scroll-to"} do %>
        <%= image_tag(asset_path('icons/icons8-comment-48.png'), class: 'w-4 h-4 object-cover  mr-1')%>
        <%= tag.p @new.comments_count, class: "text-base text-gray-500 hover:text-gray-700 hover:underline"%>
    <% end %>
</div>