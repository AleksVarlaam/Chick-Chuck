<!-- Feedback form -->
<%= turbo_frame_tag @feedback do %>
    <%= form_with model: @feedback,
        class: "flex justify-center", data: {turbo_frame: '_top'} do |f| 
    %>
      <!-- Errors -->
      <% if @feedback.errors.any? %>
        <% @feedback.errors.each do |error| %>
          <%= error.full_message %>
        <% end %>
      <% end %>
      <div class="flex flex-col w-full h-full dark:bg-gray-900 dark:text-gray-100">
      	<div class="flex flex-col items-center w-full">
            <div class="w-full grid grid-cols-1 sm:grid-cols-2 gap-2 mb-6">
                <!-- Usability -->
          		<div class="flex flex-col items-center space-y-2">
          			<%= tag.span '1. На сколько удобно и просто вам было пользоваться сайтом?', 
                        class: "text-center text-gray-500" %>
                    <fieldset>
                        <span class="star-cb-group">
                            <% 5.downto(1) do |i| %>
                                <%= f.radio_button :usability, i, id: "feedback_usability-rating-#{i}", checked: @feedback.usability == i ? true : false %>
                                <%= f.label "usability-rating-#{i}", i %>
                            <% end %>
                            <input type="radio" id="feedback_usability-rating-0" name="rating" value="0" class="star-cb-clear" />
                            <label for="feedback_usability-rating-0">0</label>
                        </span>
                    </fieldset>
          		</div>
                <!-- Speed -->
          		<div class="flex flex-col items-center space-y-2">
          			<%= tag.span '2. Как вы оцениваете скорость работы сайта?', 
                        class: "text-center text-gray-500" %>
                    <fieldset>
                        <span class="star-cb-group">
                            <% 5.downto(1) do |i| %>
                                <%= f.radio_button :speed, i, id: "feedback_speed-rating-#{i}", checked: @feedback.speed == i ? true : false %>
                                <%= f.label "speed-rating-#{i}", i %>
                            <% end %>
                            <input type="radio" id="feedback_speed-rating-0" name="rating" value="0" class="star-cb-clear" />
                            <label for="feedback_speed-rating-0">0</label>
                        </span>
                    </fieldset>
          		</div>
                <!-- Design -->
          		<div class="flex flex-col items-center space-y-2">
          			<%= tag.span '3. Как вы оцениваете дизайн и визуальное оформление сайта?', 
                        class: "text-center text-gray-500" %>
                    <fieldset>
                        <span class="star-cb-group">
                            <% 5.downto(1) do |i| %>
                                <%= f.radio_button :design, i, id: "feedback_design-rating-#{i}", checked: @feedback.design == i ? true : false %>
                                <%= f.label "design-rating-#{i}", i %>
                            <% end %>
                            <input type="radio" id="feedback_design-rating-0" name="rating" value="0" class="star-cb-clear" /><label for="feedback_design-rating-0">0</label>
                        </span>
                    </fieldset>
          		</div>
                <!-- Quality -->
          		<div class="flex flex-col items-center space-y-2">
          			<%= tag.span '4. Какова ваша общая оценка качества предоставляемых на сайте услуг?', 
                        class: "text-center text-gray-500" %>
                    <fieldset>
                        <span class="star-cb-group">
                            <% 5.downto(1) do |i| %>
                                <%= f.radio_button :quality, i, id: "feedback_quality-rating-#{i}", checked: @feedback.quality == i ? true : false %>
                                <%= f.label "quality-rating-#{i}", i %>
                            <% end %>
                            <input type="radio" id="feedback_quality-rating-0" name="rating" value="0" class="star-cb-clear" />
                            <label for="feedback_quality-rating-0">0</label>
                        </span>
                    </fieldset>
          		</div>
                <!-- informative -->
          		<div class="flex flex-col items-center space-y-2">
          			<%= tag.span '5. Есть ли на сайте достаточно информации о перевозчиках, чтобы сделать информированный выбор?', 
                        class: "text-center text-gray-500" %>

                    <div class="flex items-center w-44 text-sm font-medium rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                        <div class="flex items-center px-4 w-full ltr:rounded-l-lg rtl:rounded-r-lg dark:border-gray-700">
                            <%= f.radio_button :informative, true, id: "feedback_informativity-yes", 
                                class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
                            <%= f.label "informativity-yes", t('global.da'), 
                                class: "w-full py-2 ml-2 text-sm font-medium text-gray-600 hover:text-gray-900 dark:text-gray-300" %>
                        </div>
                        <div class="flex items-center px-4 w-full ltr:rounded-r-lg rtl:rounded-l-lg dark:border-gray-700">
                            <%= f.radio_button :informative, false, id: "feedback_informativity-no", 
                            class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
                            <%= f.label "informativity-no", t('global.net'), 
                                class: "w-full py-2 ml-2 text-sm font-medium text-gray-600 hover:text-gray-900 dark:text-gray-300" %>
                        </div>
                    </div> 
          		</div>
                <!-- Problems -->
          		<div class="flex flex-col items-center space-y-2">
          			<%= tag.span '6. Были ли у вас проблемы или трудности при использовании сайта? Если да, то какие? Опишите в комментарие.', 
                        class: "text-center text-gray-500" %>
                    
                    <div class="flex items-center w-44 text-sm font-medium rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                        <div class="flex items-center px-4 w-full ltr:rounded-l-lg rtl:rounded-r-lg dark:border-gray-700">
                            <%= f.radio_button :problems, true, id: "feedback_problems-yes", 
                                class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
                            <%= f.label "problems-yes", t('global.da'), 
                                class: "w-full py-2 ml-2 text-sm font-medium text-gray-600 hover:text-gray-900 dark:text-gray-300" %>
                        </div>
                        <div class="flex items-center px-4 w-full ltr:rounded-r-lg rtl:rounded-l-lg dark:border-gray-700">
                            <%= f.radio_button :problems, false, id: "feedback_problems-no", 
                            class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
                            <%= f.label "problems-no", t('global.net'), 
                                class: "w-full py-2 ml-2 text-sm font-medium text-gray-600 hover:text-gray-900 dark:text-gray-300" %>
                        </div>
                    </div>
          		</div>
            </div>
            <!-- Comment form -->
      		<div class="flex flex-col w-full">
                <!-- Title -->
                <%= f.text_field :title, placeholder: t('review.form.title_placeholder'), value: @feedback.title || nil,
                    class: "p-2 rounded-md resize-none w-full h-auto bg-gray-100 dark:text-gray-100 dark:bg-gray-900"%>
                <!-- Content -->
                <%= f.text_area  :content, placeholder: t('review.form.comment_placeholder'), value: @feedback.content || nil,
                    class: "p-2 mt-3 rounded-md w-full h-[6rem] sm:h-[8rem] bg-gray-100 dark:text-gray-100 dark:bg-gray-900"%>
                <!-- Submit -->
                <%= f.submit t('global.send_btn'), 
                    class: "py-4 mt-6 mb-3 font-semibold rounded-lg text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br  dark:text-gray-900 dark:bg-violet-400 cursor-pointer" %>
      		</div>
      	</div>
      </div>
    <% end %>
<% end %>