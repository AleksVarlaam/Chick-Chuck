<!-- Best carriers section -->
<div class="py-10" id="companies">
    <!-- Title -->
    <%= tag.h3 "Лучшие перевозчики", class: 'text-3xl font-semibold text-gray-800  text-center'%>
    <!-- Companies list -->
    <%= turbo_frame_tag 'companies', 
        class: "flex grid grid-cols-1 lg:grid-cols-3 space-x-4 rtl:space-x-reverse max-w-screen container mx-auto my-6" do %>
        <% if @companies.present?%>
            <!-- Companies -->
            <%= render partial: 'companies/shared/company', collection: @companies%>
        <% else %>
            <!-- Unavalaible -->
            <%= render 'contents/shared/unavailable', model: t('product.products')%>
        <% end %>
    <% end %>
    <!-- View all -->
    <div class="flex justify-center items-center text-center h-auto">
        <%= link_to users_path, class: "flex text-base font-medium justify-center items-center text-center text-gray-500 hover:text-gray-700 hover:underline", data: {turbo_frame: '_top'} do %>
            <%= t('global.view_all')%>
            <%= heroicon I18n.locale == :he ? 'arrow-small-left' : 'arrow-small-right', 
                class: "w-5 h-5 ltr:ml-2 rtl:mr-2"%>
        <% end %>
    </div>
</div>