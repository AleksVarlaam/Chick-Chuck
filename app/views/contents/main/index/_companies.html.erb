<!-- Best carriers section -->
<div class="py-10">
    <!-- Title -->
    <%= tag.h2 t('company.top_carriers'), class: 'text-3xl font-semibold text-gray-800 text-center'%>
    <!-- Companies list -->
    <%= turbo_frame_tag 'companies', 
        class: "flex grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 max-w-screen container mx-auto py-8" do %>
        <% if @companies.present?%>
            <!-- Companies -->
            <%= render partial: 'companies/shared/company_card', collection: @companies%>
        <% else %>
            <!-- Unavalaible -->
            <%= tag.div (render 'contents/shared/unavailable', model: t('company.carriers')), class: 'col-span-full'%>
        <% end %>
    <% end %>
    <!-- View all -->
    <div class="flex justify-center items-center text-center h-auto">
        <%= link_to users_path, class: "flex text-base font-medium justify-center items-center text-center text-gray-500 hover:text-gray-700 hover:underline", data: {turbo_frame: '_top'} do %>
            <%= t('company.latest_carriers')%>
            <%= heroicon I18n.locale == :he ? 'arrow-small-left' : 'arrow-small-right', 
                class: "w-5 h-5 ltr:ml-2 rtl:mr-2"%>
        <% end %>
    </div>
</div>