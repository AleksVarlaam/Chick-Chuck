<section class="bg-gray-50 my-6">
    <div class="container px-6 py-10 mx-auto">
        <%= tag.h1 t('home_page.main_features.title_html'), class: "text-3xl font-semibold text-gray-800 capitalize lg:text-4xl "%>

        <div class="mt-2">
            <span class="inline-block w-40 h-1 bg-blue-500 rounded-full"></span>
            <span class="inline-block w-3 h-1 ml-1 bg-blue-500 rounded-full"></span>
            <span class="inline-block w-1 h-1 ml-1 bg-blue-500 rounded-full"></span>
        </div>

        <div class="mt-8 xl:mt-12 lg:flex lg:items-center">
            <div class="grid w-full grid-cols-1 gap-8 lg:w-1/2 xl:gap-16 md:grid-cols-2">
                <!-- Carriers -->
                <div class="space-y-3">
                    <span class="inline-block p-3 text-blue-500 bg-blue-100 rounded-xl ">
                        <%= image_tag(asset_path('icons/icons8-view-64.png'), class: "w-6 h-6")%>
                    </span>
                    <!-- Title -->
                    <%= tag.h1 t('home_page.top_features.combining'), class: "text-2xl font-semibold text-gray-700 capitalize "%>
                    <!-- Description -->
                    <%= tag.p t('home_page.main_features.combining_desc'), class: "text-gray-500"%>
                </div>
                <!-- Reviews -->
                <div class="space-y-3">
                    <span class="inline-block p-3 text-blue-500 bg-blue-100 rounded-xl ">
                        <%= image_tag(asset_path('icons/icons8-discussion-64.png'), class: "w-6 h-6")%>
                    </span>
                    <!-- Title -->
                    <%= tag.h1 t('home_page.top_features.reviews'), class: "text-2xl font-semibold text-gray-700 capitalize "%>
                    <!-- Description -->
                    <%= tag.p t('home_page.main_features.reviews_desc'), class: "text-gray-500"%>
                </div>
                <!-- Calculator -->
                <div class="space-y-3">
                    <span class="inline-block p-3 text-blue-500 bg-blue-100 rounded-xl ">
                        <%= image_tag(asset_path('icons/icons8-calculator-blue-64.png'), class: "w-6 h-6")%>
                    </span>
                    <!-- Title -->
                    <%= tag.h1 t('home_page.top_features.calculator'), class: "text-2xl font-semibold text-gray-700 capitalize "%>
                    <!-- Description -->
                    <%= tag.p t('home_page.main_features.calculator_desc'), class: "text-gray-500"%>
                </div>
                <!-- Market -->
                <div class="space-y-3">
                    <span class="inline-block p-3 text-blue-500 bg-blue-100 rounded-xl ">
                        <%= image_tag(asset_path('icons/icons8-lounge-blue-50.png'), class: "w-6 h-6")%>  <!--color icon - #1E2ED5 -->
                    </span>
                    <!-- Title -->
                    <%= tag.h1 t('home_page.top_features.market'), class: "text-2xl font-semibold text-gray-700 capitalize "%>
                    <!-- Description -->
                    <%= tag.p t('home_page.main_features.market_desc'), class: "text-gray-500"%>
                </div>
            </div>

            <div class="hidden lg:flex lg:w-1/2 lg:justify-center">
                <%= image_tag(asset_path('bg/main_features_image.webp'), class: "w-[28rem] h-[28rem] flex-shrink-0 object-cover xl:w-[34rem] xl:h-[34rem] rounded-full")%>
            </div>
        </div>
    </div>
</section>