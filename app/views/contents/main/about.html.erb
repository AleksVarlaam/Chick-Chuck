<% currently_at t('pages.preparation') %>
<% provide :page_title, t('pages.preparation') %>

<%= turbo_stream_from @statistic%>


<%= tag.section class: "grid grid-cols-4 flex w-full mx-auto h-full " do %>
    <!-- Main content -->
    <section class="bg-gray-50 col-span-full">
        <div class="px-6 mx-auto text-center">
            <!-- Main Title -->
            <%= tag.h2 'О сервисе', class: "text-3xl font-semibold text-gray-800 capitalize my-6 text-center"%>
            <div class="container mx-auto">
                <!-- Header content -->
                <%= render 'contents/main/about/header_content'%>
                <!-- Arrow down -->
                <div class="flex justify-center mt-16">
                    <%= link_to '#content', data: {controller: 'scroll-to', 'scroll-to-offset-value' => "50"} do %>
                        <%= heroicon 'chevron-double-down', class: 'w-6 h-6 text-gray-500 hover:text-gray-900'%>
                    <% end %>
                </div>
                <!-- Main content -->
                <%= render 'contents/main/about/main_content'%>
                <!-- Statistic -->
                <%= render 'contents/main/about/statistic'%>
            </div>
        </div>
        <!-- Comments section-->
        <div class="px-6 ">
            <%= render 'feedbacks/comments/comments_section' %>
        </div>
    </section>
<% end %>
