<% currently_at t('pages.home') %>
<% provide :page_title, t('pages.home') %>


<%= tag.section class: "grid grid-flow-row auto-rows-max flex w-full px-2" do %>
    <!-- Header -->
    <%= tag.div (render 'contents/main/index/header'), class: "mb-6 -mx-2"%>
    <!-- Top features -->
    <%= render 'contents/main/index/top_features'%>
    <!-- Top trucks -->
    <%= render 'contents/trucks/top_trucks'%>
    <!-- Features -->
    <%= render 'contents/main/index/main_features'%>
    <!-- Latest trucks -->
    <%= render 'contents/trucks/latest_trucks' if @trucks.present?%>
    <!-- Note -->
    <%= render 'contents/main/index/moving_preparation'%>
    <!-- Market -->
    <%= render 'contents/main/index/market'%>
    <!-- Newsletter -->
    <%= render 'contents/main/index/newsletter'%>
    <!-- Latest news -->
    <%= render 'contents/main/index/latest_news' if News.count.positive?%>
<% end %>