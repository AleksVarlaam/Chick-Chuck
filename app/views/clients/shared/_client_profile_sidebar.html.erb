        <%= image_tag(current_client.avatar_attachment_path, class: "object-cover w-24 h-24 mx-2 mb-3 rounded-full", alt: "avatar")%>
        <!-- Name -->
        <%= tag.h4 current_client.user_name, class: "break-all mx-2 font-medium text-xl text-gray-800 text-center hover:underline" %>
