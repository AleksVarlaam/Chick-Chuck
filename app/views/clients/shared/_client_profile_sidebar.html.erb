        <hr>
        <!-- New product page -->
        <li>
        <%= link_to new_clients_product_path, 
            class: "flex items-center text-base space-x-3 text-gray-700 p-2 rounded-md font-medium hover:bg-gray-100 focus:bg-gray-200 focus:shadow-outline", 
            data: {action: "dropdown#toggle"}, 
            role: "menuitem",
            tabindex:"-1",
            id:"profilePageLink" do
        %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
