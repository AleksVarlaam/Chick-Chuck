<% currently_at t('sign_up.title') %>
<% provide :page_title, t('sign_up.title') %>

<section class="w-full mt-0 pt-0">
    <!-- Title -->
    <div class="text-center my-6 mx-2">
        <%= tag.h2 t('sign_up.title'), class: "text-3xl font-semibold text-gray-800 capitalize my-6 text-center"%>
    </div>
    <!-- Omniauth -->
    <div class="grid grid-cols-auto -mt-6 mx-6 sm:mx-auto sm:justify-center">
        <%= tag.div (render 'shared/buttons/omniauth_enter'), class: ''%>
    </div>
    <!-- Form -->
    <div class="px-6 h-full w-full text-gray-800">
        <div class="flex xl:justify-center lg:justify-between justify-center align-top flex-wrap g-6">
          <div class="w-full p-6 mx-auto rounded-lg shadow-lg">
              <!-- Registsration Form -->
              <%= render 'clients/registrations/form_new'%>
          </div>
        </div>
    </div>
</section>