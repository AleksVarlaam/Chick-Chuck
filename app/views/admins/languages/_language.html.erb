<!-- Language  -->
<%= turbo_frame_tag dom_id(language), 
    class: 'items-center flex mx-auto mt-4 w-full relative border-b border-b-gray-300 hover:border-b-gray-500' do %>
    <%= tag.p language.title, class: "text-start text-gray-600 hover:text-gray-800 text-xl" %>
    <%= link_to edit_admins_language_path(language), data: {turbo_frame: dom_id(language)},
        class: 'absolute right-0 flex py-0 mr-2 text-base font-medium justify-end items-center text-end text-gray-500 hover:text-gray-700 hover:underline' do %>
        <%= image_tag(asset_path('icons/icons8-edit-48.png'), class: 'w-5 h-5')%>
    <% end %>
<% end %>




