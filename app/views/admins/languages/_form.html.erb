<!-- Calculator categories form -->
<%= turbo_frame_tag dom_id(@language) do %>
    <%= form_with model: [:admins, @language], class: "items-center mx-auto my-4 w-full relative" do |f| %>
      <!-- Error messages -->
      <%= tag.div (render 'shared/error_messages', resource: @language), class: 'col-span-full' %>
      <!-- Title -->
      <div class="flex items-center text-gray-600 justify-start">
          <div class="flex items-center text-center">
              <%= f.label :title, class: "text-lg mr-2" %>
          </div>
          <%= f.text_field :title, class: "w-full mr-1 text-gray-700 bg-white border border-gray-300 rounded-md  focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring"%>
      </div>
      <div class="flex items-center justify-start mt-4">
          <!-- Button Save -->
          <div class="flex justify-start pb-2">
              <%= f.submit t('global.save_btn'), class: "cursor-pointer px-6 py-2 leading-5 text-white transition-colors duration-200 transform  rounded-md  focus:outline-none bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4"%>
          </div>
          <!-- Button delete -->
          <div class="flex justify-start pb-2 ml-3">
              <%= link_to t('global.destroy_btn'), admins_language_path(@language), 
                  data: {turbo_method: :delete, turbo_confirm: t('global.are_you_sure')},
                  class: "cursor-pointer px-6 py-2 leading-5 text-white transition-colors duration-200 transform  rounded-md  focus:outline-none bg-gradient-to-r from-red-500 via-red-600 to-red-700 hover:bg-gradient-to-br focus:ring-4" if action_name == 'edit'%>
          </div>
      </div>
    <% end %>
<% end %>