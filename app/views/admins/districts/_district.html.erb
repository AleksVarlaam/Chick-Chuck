
<%= turbo_frame_tag dom_id(district), 
    class: 'items-center inline-flex mx-auto w-full grid grid-cols-9 gap-6 border-b border-b-gray-300 hover:border-b-gray-500' do %>
    <!-- Ru -->
    <%= tag.div district.ru, class: "break-all ml-1 col-span-2 py-1.5"%>
    <!-- En -->
    <%= tag.div district.en, class: "break-all col-span-2 py-1.5"%>
    <!-- He -->
    <%= tag.div district.he, class: "break-all col-span-2 py-1.5"%>
    <!-- He -->
    <%= tag.div district.uk, class: "break-all col-span-2 py-1.5"%>
    <div class="flex items-center justify-end -ml-2 sm:mr-1">
        <!-- Edit -->
        <%= link_to edit_admins_district_path(district), data: {turbo_frame: dom_id(district)},
            class: 'col-span-1  py-1.5 flex  text-base font-medium justify-end items-center text-end text-gray-500 hover:text-gray-700 hover:underline' do %>
                <%= heroicon 'pencil-square', class: 'w-5 h-5 text-gray-900'%>
        <% end %>
        <!-- Delete -->
        <%= link_to admins_district_path(district), data: {turbo_method: :delete, turbo_confirm: t('global.are_you_sure')},
          class: 'col-span-1  py-1.5 flex text-base font-medium justify-end items-center text-end text-gray-500 hover:text-gray-700 hover:underline' do %>
              <%= image_tag(asset_path('icons/icons8-remove-32.png'), class: 'w-5 h-5')%>
        <% end %>
    </div>
<% end %>

