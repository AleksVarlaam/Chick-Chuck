<!-- Admin menu -->
<%= link_to admins_dashboard_path, 
  class: "font-medium flex flex-col items-center my-3 mx-2", 
  data: {action: "dropdown#toggle"}, 
  role: "menuitem",
  tabindex:"-1",
  id:"personalInfoLink" do
%>
  <!-- Avatar -->
  <%= image_tag(current_admin.avatar_attachment_path, class: "object-cover w-16 h-16 mx-2 mb-3 rounded-full", alt: "avatar")%>
  <!-- Company name -->
  <%= tag.h4 ('Admin'), class: "px-4 -mt-1 font-medium text-gray-800 text-center hover:underline"%>
  <!-- Email -->
  <%= tag.p current_admin.user_name, class: "px-4 py-2 text-sm font-medium text-gray-600 text-center hover:underline"%>
<% end %>

<hr>
