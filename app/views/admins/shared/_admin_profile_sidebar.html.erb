<div class="bg-white rounded py-3 px-4 shadow-md hidden lg:block min-h-screen h-full -mb-20 pb-14">
    <div class="flex flex-col items-center mt-6 -mx-2">
        <!-- Avatar -->
        <%= image_tag(current_admin.avatar_attachment_path, class: "object-cover w-24 h-24 mx-2 mb-3 rounded-full", alt: "avatar")%>
        <!-- Name -->
        <%= tag.h4 'Admin', class: "break-all mx-2 font-medium text-xl text-gray-800 text-center hover:underline" %>
        <!-- Email -->
        <%= tag.p current_admin.user_name, class: "break-all mx-2 mt-1 text-base font-medium text-gray-600 text-center hover:underline"%>
    </div>
    
    <ul class="space-y-1 text-sm my-3">
        <hr>
        <!-- Chats -->
        <li>
        <%= link_to rooms_path, 
            class: "flex items-center text-base space-x-3 text-gray-700 p-2 rounded-md font-medium hover:bg-gray-100 focus:bg-gray-200 focus:shadow-outline", 
            data: {action: "dropdown#toggle"}, 
            role: "menuitem",
            tabindex:"-1",
            id:"profilePageLink" do
        %>
            <%= heroicon "chat-bubble-left-right", class: "w-4 h-4 mr-2" %>
            <%= t('user_menu.chats')%>
        <% end %>
        </li>
        
        <!-- Dashboard -->
        <li>
        <%= link_to admins_dashboard_path, 
            class: "flex items-center text-base space-x-3 text-gray-700 p-2 rounded-md font-medium hover:bg-gray-100 focus:bg-gray-200 focus:shadow-outline", 
            data: { action: "dropdown#toggle" }, 
            role: "menuitem",
            tabindex:"-1",
            id:"profilePageLink" do
        %>
            <%= heroicon "rectangle-group", class: "w-4 h-4 mr-2" %>
            <%= t('user_menu.dashboard')%>
        <% end %>
        </li>
        
        <hr>
        <!-- Add News -->
        <li>
        <%= link_to new_admins_news_path, 
            class: "flex items-center text-base space-x-3 text-gray-700 p-2 rounded-md font-medium hover:bg-gray-100 focus:bg-gray-200 focus:shadow-outline", 
            data: { action: "dropdown#toggle" }, 
            role: "menuitem",
            tabindex:"-1",
            id:"profilePageLink" do
        %>
            <%= heroicon "plus-circle", class: "w-4 h-4 mr-2" %>
            <%= t('admin_menu.add_news')%>
        <% end %>
        </li>
        
        <!-- News -->
        <li>
        <%= link_to admins_news_index_path, 
            class: "flex items-center text-base space-x-3 text-gray-700 p-2 rounded-md font-medium hover:bg-gray-100 focus:bg-gray-200 focus:shadow-outline", 
            data: { action: "dropdown#toggle" }, 
            role: "menuitem",
            tabindex:"-1",
            id:"profilePageLink" do
        %>
            <%= image_tag(asset_path('icons/icons8-news-64.png'), class: "w-4 h-4 mr-2")%>
            <%= t('admin_menu.news')%>
        <% end %>
        </li>
        
        <hr>
        <!-- Catalog -->
        <li>
        <%= link_to admins_categories_path, 
            class: "flex items-center text-base space-x-3 text-gray-700 p-2 rounded-md font-medium hover:bg-gray-100 focus:bg-gray-200 focus:shadow-outline", 
            data: { action: "dropdown#toggle" }, 
            role: "menuitem",
            tabindex:"-1",
            id:"profilePageLink" do
        %>
            <%= image_tag(asset_path('icons/icons8-sorting-64.png'), class: "w-4 h-4 mr-2")%>
            <%= t('admin_menu.catalog')%>
        <% end %>
        </li>
        
        <!-- Languages and districts -->
        <li>
        <%= link_to admins_districts_path, 
            class: "flex items-center text-base space-x-3 text-gray-700 p-2 rounded-md font-medium hover:bg-gray-100 focus:bg-gray-200 focus:shadow-outline", 
            data: { action: "dropdown#toggle" }, 
            role: "menuitem",
            tabindex:"-1",
            id:"profilePageLink" do
        %>
            <%= heroicon "language", class: "w-4 h-4 mr-2" %>
            <%= t('admin_menu.lang_dist')%>
        <% end %>
        </li>

        <hr>
        <!-- Credential Info -->
        <li>
        <%= link_to edit_admin_registration_path, 
            class: "flex items-center text-base space-x-3 text-gray-700 p-2 rounded-md font-medium hover:bg-gray-100 focus:bg-gray-200 focus:shadow-outline", 
            data: { action: "dropdown#toggle" }, 
            role: "menuitem",
            tabindex:"-1",
            id:"password&SecurityLink" do 
        %>
            <%= heroicon "lock-closed", class: "w-4 h-4 mr-2" %>
            <%= t('user_menu.credential')%>
        <% end %>
        </li>

        <hr>
        <!-- Sign Out -->
        <li>
        <%= link_to destroy_admin_session_path, 
            class: "flex items-center text-base space-x-3 text-gray-700 p-2 rounded-md font-medium hover:bg-gray-100 focus:bg-gray-200 focus:shadow-outline",
            data: {action: "dropdown#toggle", turbo_method: :delete, turbo_confirm: t('global.are_you_sure')}, 
            role: "menuitem", 
            tabindex:"-1", 
            id:"signOutLink" do 
        %>
           <%= heroicon "arrow-right-on-rectangle", class: "w-4 h-4 mr-2" %>
           <%= t('user_menu.sign_out')%>
        <% end %>
        </li>
    </ul>
</div>

