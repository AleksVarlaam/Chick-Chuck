<%= turbo_frame_tag category do %>
    <!-- Category title -->
    <%= turbo_frame_tag dom_id(category, 'form'), 
        class: 'items-center flex mx-auto my-4 w-full relative border-b border-b-gray-300 hover:border-b-gray-500' do %>
        <%= tag.p category.ru, class: "text-start text-gray-500 text-xl font-bold uppercase" %>
        <p class="mx-2">|</p>
        <%= tag.p category.en, class: "text-start text-gray-500 text-xl font-bold uppercase" %>
        <p class="mx-2">|</p>
        <%= tag.p category.uk, class: "text-start text-gray-500 text-xl font-bold uppercase" %>
        <p class="mx-2">|</p>
        <%= tag.p category.he, class: "text-start text-gray-500 text-xl font-bold uppercase" %>
        <%= link_to edit_admins_category_path(category), data: {turbo_frame: dom_id(category, 'form')},
            class: 'absolute right-0 flex py-0 mr-2 text-base font-medium justify-end items-center text-end text-gray-500 hover:text-gray-700 hover:underline' do %>
            <%= image_tag(asset_path('icons/icons8-edit-48.png'), class: 'w-5 h-5')%>
        <% end %>
    <% end %>
    <!-- Things -->
    <%= tag.div id:dom_id(category, 'things'), class: "overflow-x-auto mb-4" do %>
        <div class="grid grid-cols-9 gap-6 bg-gray-200 p-1">
            <%= tag.div 'Ru', class: 'col-span-2'%>
            <%= tag.div 'En', class: 'col-span-2'%>
            <%= tag.div 'Uk', class: 'col-span-2'%>
            <%= tag.div 'He', class: 'col-span-2'%>
        </div>
        <%= render partial: 'admins/catalog/things/thing', collection: category.things%>
    <% end %>
    <!-- Add thing -->
    <%= render 'shared/buttons/add', id: dom_id(category, "thing_form"), title: t('thing.add_btn'), path: new_admins_category_thing_path(category)%>
<% end %>



