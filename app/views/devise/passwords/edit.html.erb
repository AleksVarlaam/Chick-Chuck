<% currently_at t('reset_password.title') %>
<% provide :page_title, t('reset_password.title') %>


<%= render TurboModalComponent.new(title: t('reset_password.title')) do %>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
       <%= f.hidden_field :reset_password_token %>

      <!-- Password input -->
      <div class="mb-6">
         <%= f.label :password, User.human_attribute_name('new_password'), class: "text-lg text-gray-100" %>
         <%= f.text_field :password, autofocus: true, 
          class: "text-base form-control block w-full px-4 py-2 mt-1 font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none",
          id: "email-input",
          required: true 
         %>
      </div>
      
      <!-- Password input -->
      <div class="mb-6">
         <%= f.label :password_confirmation, class: "text-lg text-gray-100" %>
         <%= f.text_field :password_confirmation, autofocus: true, 
          class: "text-base form-control block w-full px-4 py-2 mt-1 font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none",
          id: "email-input",
          required: true 
         %>
      </div>

      <!-- Submit button -->
      <div class="text-center lg:text-center">
          <%= f.submit t('global.send_btn'), class: "w-full text-white bg-gradient-to-r from-blue-700 via-blue-800 to-blue-900 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-xl px-5 py-2.5 text-center mr-2 mb-2" %>
      </div>
    <% end %>

<% end %>


