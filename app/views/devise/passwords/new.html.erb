<% currently_at t('reset_password.title') %>
<% provide :page_title, t('reset_password.title') %>


<section class="max-w-4xl p-6 mx-auto bg-white rounded-lg shadow-md hover:shadow-lg dark:bg-gray-800">
    <!-- Flash messages -->
    <%= render "shared/flash_messages"%>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <!-- Error message -->
      <%= render "shared/error_messages", resource: resource %>
        <div class="grid grid-cols-1 gap-6 mt-4">
            <div>
                <%= f.label t('sign_in.forgot'), class: "text-lg font-semibold text-gray-700 dark:text-white" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', required: true, 
                    value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                    class: "block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring" %>
            </div>
        </div>

        <div class="flex justify-center mt-6">
            <%= f.submit t('reset_password.send_btn'), class: "px-5 py-2.5 leading-5 text-white transition-colors duration-300 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600 cursor-pointer" %>
        </div>
   <% end %>
 
   <p class="text-sm text-gray-500 font-semibold mt-2 pt-1 mb-0 space-x-4">
     <%= link_to t('user_menu.sign_in'), new_session_path(resource_name), class:"text-blue-600 hover:text-gray-700 focus:text-red-700 transition duration-200 ease-in-out", data: {turbo_frame: '_top'}%>
     <%= link_to t('sign_in.register'), new_registration_path(resource_name), class:"text-red-600 hover:text-gray-700 focus:text-red-700 transition duration-200 ease-in-out", data: {turbo_frame: '_top'}%>
   </p>

</section>