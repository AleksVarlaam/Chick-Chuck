<div class="flex items-center py-5 overflow-y-auto whitespace-nowrap">
    <%= link_to root_path, class: "text-gray-700" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
        </svg>
    <% end %>

    <!-- Home path -->
    <%= tag.span '/', class: "mx-5 text-gray-700" if admin_signed_in?%>

    <%= link_to t('user_menu.dashboard'), admins_dashboard_path, class: "text-gray-700 hover:underline" if admin_signed_in?%>
    <%# link_to t('user_menu.dashboard'), companies_dashboard_path, class: "text-gray-700 hover:underline" if company_signed_in?%>
    <%# link_to t('user_menu.dashboard'), clients_dashboard_path, class: "text-gray-700 hover:underline" if client_signed_in?%>

    <!-- Parent path -->
    <% if yield(:parent_title).present? && yield(:parent_path).present?%>
        <%= tag.span '/', class: "mx-5 text-gray-700"%>
        <%= link_to yield(:parent_title), yield(:parent_path), class: "text-gray-700 capitalize hover:underline" %>
    <% end %>
    
    <!-- Current path -->
    <%= tag.span '/', class: "mx-5 text-gray-700"%>
    <%= link_to yield(:nav_title), yield(:nav_path), class: "text-gray-700 capitalize hover:underline" %>
   
</div>