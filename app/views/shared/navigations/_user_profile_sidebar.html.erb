<div class="bg-white rounded py-3 px-4 shadow-md hidden lg:block min-h-screen h-full -mb-20 pb-14">
    <!-- User sidebar menu header -->
    <div class="flex flex-col items-center my-3 mx-2">
        <!-- Avatar -->
        <%= image_tag(current_user.avatar_attachment_path, class: "object-cover w-24 h-24 mx-2 mb-3 rounded-full", alt: "user-avatar")%>
        <!-- Name -->
        <%= tag.h4 current_user.user_name, class: "break-all mx-2 font-medium text-xl text-gray-800 text-center hover:underline" %>
        <!-- Email -->
        <%= tag.p current_user.email, class: "break-all mx-2 mt-1 text-base font-medium text-gray-600 text-center hover:underline"%>
    </div>
    
    <!-- User sidebar menu links list -->
    <ul class="space-y-1 text-sm my-3">
        <%= render 'admins/shared/admin_menu',
            link_class: "flex items-center text-base space-x-3 text-gray-700 p-2 rounded-md font-medium hover:bg-gray-100 focus:bg-gray-200 focus:shadow-outline" if admin_signed_in?%>
        <%= render 'clients/shared/client_menu', 
            link_class: "flex items-center text-base space-x-3 text-gray-700 p-2 rounded-md font-medium hover:bg-gray-100 focus:bg-gray-200 focus:shadow-outline" if client_signed_in?%>
        <%= render 'companies/shared/company_menu', 
            link_class: "flex items-center text-base space-x-3 text-gray-700 p-2 rounded-md font-medium hover:bg-gray-100 focus:bg-gray-200 focus:shadow-outline" if company_signed_in?%>
    </ul>
</div>

