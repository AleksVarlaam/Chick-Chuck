<%= provide :footer do %>
    <footer class="bg-gray-200 mt-8 relative">
        <%= link_to '#top', class: 'absolute ltr:right-2 rtl:left-2 bottom-5 z-20', data: {controller: 'scroll-to'} do %>
            <%= image_tag('icons/icons8-up-2-50.png', class: 'w-8 hover:w-10 h-full', alt: "arrow up")%>
        <% end unless controller_name == 'errors'%>
        <div class="container px-6 py-8 mx-auto">
            <div class="text-center">
                <!-- Main title & locals -->
                <div class="relative flex items-center justify-center">
                    <%= link_to 'Chick-Chuck', root_path, class: "text-3xl font-bold text-gray-800 hover:text-gray-700"%>
                    <%= tag.div (render 'shared/locales'), class: "absolute ltr:right-2 rtl:-left-3"%>
                </div>
                <!-- Main navigations -->
                <div class="flex flex-wrap justify-center mt-5 -mx-4">
                    <%= render 'shared/navigations/content_links_list', 
                        link_class: "mx-4 text-base font-medium transition-colors duration-300 hover:text-gray-900",
                        current_page: current_page %>
                </div>
            </div>

            <hr class="my-6 border-gray-400 md:my-10" />
            <!-- Copyright -->
            <div class="flex flex-col items-center w-full md:relative">
                <%= link_to 'info@chick-chuck.com', "mailto:info@chick-chuck.com", 
                    class:"text-gray-500 md:absolute md:right-0 hover:underline mb-4 md:mb-0"%>
                <p class="text-gray-500 text-center">Â© Copyright <%= Time.now.strftime('%Y')%>. All Rights Reserved.</p>
            </div>
        </div>
    </footer>
<% end%>

