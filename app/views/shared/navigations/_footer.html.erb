<%= provide :footer do %>
    <footer class="bg-gray-200 mt-8 relative">
        <!-- Logo -->
        <%= link_to '#top', class: 'absolute ltr:right-2 rtl:left-2 bottom-5 z-20', 
            data: {controller: 'scroll-to', 'scroll-to-offset-value' => "150"} do %>
            <%= image_tag('icons/icons8-up-2-50.png', class: 'w-8 hover:w-10 h-full', alt: "arrow up")%>
        <% end unless controller_name == 'errors'%>
        <div class="container px-6 py-8 mx-auto">
            <div class="text-center">
                <!-- Main title & locals -->
                <div class="relative flex items-center justify-center">
                    <%= link_to 'Chick-Chuck', root_path, class: "text-3xl font-bold text-gray-800 hover:text-gray-700"%>
                    <%= tag.div (render 'shared/locales'), class: "absolute ltr:right-2 rtl:-left-3"%>
                </div>
                <!-- Main navigations -->
                <div class="flex flex-wrap justify-center mt-5 items-center space-x-6 rtl:space-x-reverse">
                    <%= render 'shared/navigations/content_links_list', 
                        link_class: "text-gray-600 text-base font-medium transition-colors duration-300 hover:text-gray-900",
                        current_page: current_page %>
                </div>
                <!-- Feedback -->
                <%= render 'feedbacks/shared/service_feedback_link'%>
            </div>

            <hr class="my-6 border-gray-400 md:my-10" />

            <div class="flex flex-col items-center w-full md:relative space-y-4 md:space-y-0">
                <!-- Location -->
                <address class="flex items center text-gray-600 text-base font-medium md:absolute md:left-0 hover:underline">
                    <%= heroicon 'map-pin', class: 'w-5 h-5 ltr:mr-1 rtl:ml-1'%>
                    <%= t('israel')%>
                </address>
                <!-- Mail -->
                <%= link_to "mailto:info@chick-chuck.com", 
                    class:"flex items-center text-gray-600 text-base font-medium md:absolute md:right-0 hover:underline" do %>
                       <%= heroicon 'envelope', class: 'w-5 h-5 ltr:mr-1.5 rtl:ml-1.5' %> 
                       <%= 'info@chick-chuck.com'%>
                <% end %>
                <!-- Copyright -->
                <p class="text-gray-600 text-base font-medium text-center">Â© Copyright <%= Time.now.strftime('%Y')%>. All Rights Reserved.</p>
            </div>
        </div>
    </footer>
<% end%>

