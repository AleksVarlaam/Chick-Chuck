<!-- Gradient: bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 -->

<div class="flex items-center">
    <!-- Became Carrier -->
    <%= link_to t('pages.become'), new_company_registration_path, class: "hidden xl:block mr-4 whitespace-nowrap text-base font-medium  hover:text-gray-900 #{current_page?(new_company_registration_path) ? 'text-gray-900' : 'text-gray-500'}"%>
    <!-- Guest menu dropdown -->
    <div 
      class="relative z-50"
      data-controller="dropdown"
    >
    <div>
      <button 
        data-action="dropdown#toggle click@window->dropdown#hide"
        class="flex text-sm rounded-full border-2 border-gray-300 focus:outline-none drop-shadow-2xl hover:drop-shadow-lg items-center" 
        id="client-menu-button" 
        type="button" 
        aria-expanded="false" 
        aria-haspopup="true"
      >
        <span class="sr-only">Open client menu</span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mx-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
    
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-gray-600 rounded-full border m-1">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
    
      </button>
    </div>

    <!--
      Dropdown menu, show/hide based on menu state.

      Entering: "transition ease-out duration-100"
        From: "transform opacity-0 scale-95"
        To: "transform opacity-100 scale-100"
      Leaving: "transition ease-in duration-75"
        From: "transform opacity-100 scale-100"
        To: "transform opacity-0 scale-95"
    -->
    <div 
        data-dropdown-target="menu"
        class="hidden origin-top-right absolute z-50 right-0 mt-2 min-w-max rounded-lg shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" 
        role="menu" 
        aria-orientation="vertical" 
        aria-labelledby="client-menu-button" 
        tabindex="-1"
        data-transition-enter-from="opacity-0 scale-95"
        data-transition-enter-to="opacity-100 scale-100"
        data-transition-leave-from="opacity-100 scale-100"
        data-transition-leave-to="opacity-0 scale-95"
    >
        <!-- Sign In -->
        <%= link_to t('guest_menu.sign_in'), new_client_session_path, 
            class: "font-medium block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", 
            data: {action: "dropdown#toggle", turbo_frame: 'modal'}, 
            role: "menuitem",
            tabindex:"-1",
            id: "signInLink"
        %>
    
        <!-- Sign Up -->
        <%= link_to t('guest_menu.sign_up'), new_client_registration_path, 
            class: "font-medium block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", 
            data: {action: "dropdown#toggle"}, 
            role: "menuitem",
            tabindex:"-1",
            id: "signUpLink"
        %>
    
        <!-- Become a Carrier -->
        <hr>
        <!-- Sign In As Company-->
        <%= link_to new_company_session_path, 
            class: "font-medium flex block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 items-center", 
            data: {action: "dropdown#toggle", turbo_frame: 'modal'}, 
            role: "menuitem",
            tabindex:"-1",
            id: "signInLink" do
        %>
            <%= image_tag(asset_path('icons/icons8-in-transit-50.png'), class: "w-4 h-4 mr-2")%>
            <%= t('guest_menu.sign_in')%>
        <% end %>
    
        <%= link_to new_company_registration_path, 
            class: "font-medium flex block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 items-center", 
            data: {action: "dropdown#toggle"}, 
            role: "menuitem",
            tabindex:"-1",
            id:"become-a-Carrier-link" do
        %>
            <%= image_tag(asset_path('icons/icons8-in-transit-50.png'), class: "w-4 h-4 mr-2")%>
            <%= t('pages.become')%>
        <% end %>
    
    </div>
</div>
 