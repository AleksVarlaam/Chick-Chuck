<!-- Locales -->
<div data-controller="dropdown" class="relative">
  <button type="button" data-action="dropdown#toggle click@window->dropdown#hide"
      class="flex items-center -mr-3 whitespace-nowrap text-base font-medium text-gray-500 hover:text-gray-900">
      <%= image_tag("icons/locales/icons8-#{I18n.locale}-48.png", class: 'w-6 h-6', alt: "#{I18n.locale}-flag")%>
      <svg aria-hidden="true" class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
  </button>

  <div
    data-dropdown-target="menu"
    class="hidden transition transform origin-top-right absolute right-0 z-50 w-auto mt-2 border shadow-md hover:shadow-lg rounded-lg"
    data-transition-enter-from="opacity-0 scale-95"
    data-transition-enter-to="opacity-100 scale-100"
    data-transition-leave-from="opacity-100 scale-100"
    data-transition-leave-to="opacity-0 scale-95"
  >
    <ul class="py-1 text-sm w-auto text-gray-700 bg-white rounded-lg shadow-lg">
      <% I18n.available_locales.each do |locale| %>
          <li>
            <% if I18n.locale == locale %>
              <div class="flex items-center w-full font-medium block px-4 py-2 text-sm text-gray-800 hover:bg-gray-100 rtl:ml-4 ltl:mr-4">
                  <%= image_tag("icons/locales/icons8-#{locale}-48.png", 
                    class: "w-5 h-5 ltr:mr-2 rtl:ml-2", alt: "#{locale}-flag")%>
                  <%= t(locale)%>
              </div>
            <% else %>
              <%= link_to url_for(locale: locale),
                class: "flex items-center w-full font-medium block px-4 py-2 text-sm text-gray-500 hover:bg-gray-100 rtl:ml-4 ltl:mr-4",
                    data: {action: "dropdown#toggle", 
                    turbo: false} do 
              %>
                  <%= image_tag("icons/locales/icons8-#{locale}-48.png", 
                    class: "w-5 h-5 ltr:mr-2 rtl:ml-2", alt: "#{locale}-flag")%>
                  <%= t(locale)%>
              <% end %>
            <% end %>
          </li>
      <% end %>
    </ul>
  </div>
</div>