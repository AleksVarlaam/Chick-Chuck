<%= turbo_frame_tag :cookies_modal do %>
  <% if session[:cookies_accepted].nil? %>
      <section class="fixed z-30 max-w-md p-4 mx-auto bg-white border border-gray-300 shadow-md hover:shadow-lg dark:bg-gray-800 sm:left-6 bottom-20 dark:border-gray-700 rounded-2xl">
          <h2 class="font-semibold text-gray-800 dark:text-white">üç™ Cookie Notice</h2>

          <%= tag.p t('cookies.desc'), class: "mt-4 text-sm text-gray-600 dark:text-gray-300" %>
    
          <div class="flex items-center justify-end mt-4 gap-x-4 shrink-0">
              <%= link_to t('global.hide'), cookies_path(cookies: nil), method: :post, data: {turbo_frame: '_top'},
                   class: "text-xs bg-gray-900 font-medium rounded-lg hover:bg-gray-700 text-white px-4 py-2.5 duration-300 transition-colors focus:outline-none"%>
              <%= link_to t('global.accept'), cookies_path(cookies: true), method: :post,  data: {turbo_frame: '_top'},
                  class: "text-xs bg-gray-900 font-medium rounded-lg hover:bg-gray-700 text-white px-4 py-2.5 duration-300 transition-colors focus:outline-none" %>
          </div>
      </section>
  <% end %>
<% end %>