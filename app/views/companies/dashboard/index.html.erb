<% currently_at t('user_menu.dashboard') %>
<% provide :page_title, t('user_menu.dashboard') %>
<% provide :main_title, t('user_menu.dashboard')%>

<!-- Load Facebook SDK for JavaScript -->
<%= render 'shared/buttons/facebook_sdk_js'%>

<div class="space-y-3">
    <!-- Profile content -->
    <div class="flex justify-center">
        <!-- Rating -->
        <%= render 'feedbacks/shared/rating', object: @company %>
    </div>
    <!-- Share facebook button -->
    <div class="flex items-center flex-col justify-center space-y-2 space-x-2 rtl:space-x-reverse">
        <%= tag.p t('dashboard.share_facebook'), 
            class: "text-base text-gray-500 text-center"%>
        <!-- Your share button code -->
        <div data-turbo-permanent class="fb-share-button flex items-center" 
        data-href="<%= user_url(@company) %>" 
        data-layout="button_count"
        data-size="large">
        </div>
    </div>

    <section class="mt-3 grid md:grid-cols-2 xl:grid-cols-4 gap-6">
        <!-- Products -->
        <%= link_to user_path(@company), data: { turbo: false },
            class: "flex items-center p-8 bg-white shadow-md hover:shadow-lg rounded-lg" do %>
          <div class="inline-flex flex-shrink-0 items-center justify-center h-16 w-16 text-purple-600 bg-purple-100 rounded-full mr-6">
            <%= heroicon 'user-group', class: 'h-7 w-7'%>
          </div>
          <div>
            <%= tag.span @company.views, class: "block text-2xl font-bold" %>
            <%= tag.span t('dashboard.visitors'), class: "block text-gray-500 hover:text-gray-900" %>
          </div>
        <% end %>
        <!-- Products -->
        <%= link_to users_products_path, class: "flex items-center p-8 bg-white shadow-md hover:shadow-lg rounded-lg" do %>
          <div class="inline-flex flex-shrink-0 items-center justify-center h-16 w-16 text-purple-600 bg-purple-100 rounded-full mr-6">
            <%= heroicon 'shopping-bag', class: 'h-7 w-7'%>
          </div>
          <div>
            <%= tag.span @products.count, class: "block text-2xl font-bold" %>
            <%= tag.span t('dashboard.sold_products'), class: "block text-gray-500 hover:text-gray-900" %>
          </div>
        <% end %>
    </section>
</div>