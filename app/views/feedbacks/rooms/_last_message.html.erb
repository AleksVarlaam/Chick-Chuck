<%= turbo_frame_tag dom_id(room, :last_message) do %>
    <% if room.messages.count > 0 %>
        <%= tag.span class: "text-gray-500" do %>
            <%= room.messages&.latest.last&.content[..30] %>
            <%= ' ...' if room.messages&.latest.last&.content&.length > 30%>
        <% end %>
    <% end%>
<% end %>