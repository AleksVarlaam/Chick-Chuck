<% currently_at t('product.my_products') %>
<% provide :page_title, t('product.my_products') %>
<% provide :main_title, "#{t('product.my_products')}: #{@products.count}" %>
<% provide :nav_title, t('product.my_products') %>
<% provide :nav_path, users_products_path %>

<!-- Products Cards -->
<%= turbo_frame_tag 'products',
    class: "grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2 xl:grid-cols-3 justify-center mx-auto" do 
%>
    <%= render partial: 'contents/products/product', collection: @products%>
<% end %>

<!-- Pagy -->
<%== pagy_nav(@pagy) if current_user.products.count > 6%>

<!-- New truck -->
<hr class="my-6">
<%= render 'shared/buttons/add', id: Product.new, title: t('product.add_btn'), path: new_users_product_path%>
