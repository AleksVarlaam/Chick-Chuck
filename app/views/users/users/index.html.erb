<% currently_at t('company.carriers').capitalize %>
<% provide :page_title, t('company.carriers').capitalize %>

<!-- Main Title -->
<%= tag.h1 @title_h1, class: 'text-2xl font-semibold text-gray-800  text-center col-span-full my-6 px-4' %>
<!-- Filter -->
<%= tag.div (render 'shared/navigations/links_board', path: users_path, frame: 'companies', company: nil), class: 'mt-8'%>
<!-- Best carriers -->
<%= turbo_frame_tag 'best_companies', class: "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 w-full px-2 gap-4 sm:px-6 py-4" do %>
    <!-- Title -->
    <%= tag.h2 t('company.top_carriers'), class: 'text-3xl font-semibold text-gray-800  text-center col-span-full my-6'%>
    <% if @best_companies.present? %>
        <!-- Top companies -->
        <%= render partial: 'companies/shared/company_card', collection: @best_companies%>
    <% else %>
        <%= tag.div (render 'contents/shared/unavailable', model: t('company.carriers')), class: 'col-span-full'%>
    <% end %>
<% end %>

<!-- Latest carriers -->
<%= turbo_frame_tag 'latest_companies', class: "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 w-full px-2 gap-4 sm:px-6 py-4" do %>
    <!-- Title -->
    <%= tag.h3 t('company.latest_carriers'), class: 'text-3xl font-semibold text-gray-800  text-center col-span-full my-6'%>
    <!-- Latest companies -->
    <%= render partial: 'companies/shared/company_card', collection: @latest_companies%>
<% end if @latest_companies.present?%>

<!-- Pagy -->
<%== pagy_nav(@pagy_a) if @companies_count > 8 %>