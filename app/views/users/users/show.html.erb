<% currently_at @user.title %>
<% provide :page_title, @user.title %>
<% provide :nav_title, @user.title %>

<!-- Schema -->
<%= render 'shared/meta/organization_json', user: @user%>
<%= turbo_stream_from @user%>
<!-- Load Facebook SDK for JavaScript -->
<div data-turbo-permanent id="fb-root"></div>
<script>
    document.addEventListener("turbo:load", ()=>{
        (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.0";
        fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    })
</script>

<%= tag.div class: "grid grid-flow-row auto-rows-max flex w-full px-2 lg:px-6" do %>
    <!-- About company section -->
    <%= tag.div (render 'companies/shared/company', company: @user), class: 'mb-3 pt-3 col-span-full' %>
    <!-- Global rating -->
    <%= render 'feedbacks/shared/global_ratings', company: @user%>
    <!-- Revies section -->
    <%= render 'feedbacks/reviews/reviews_section' %>
<% end %>