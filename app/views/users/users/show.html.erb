<% currently_at @user.title %>
<% provide :page_title, @user.title %>
<% provide :nav_title, @user.title %>

<%= turbo_stream_from @user%>

<%= tag.section class: "grid grid-flow-row auto-rows-max flex w-full px-2 lg:px-6" do %>
    <!-- About company section -->
    <%= tag.div (render 'companies/shared/about_company', company: @user), class: 'mb-3 pt-3 col-span-full' %>
    <!-- Trucks filter -->
    <%# render 'contents/trucks/trucks_filter', path: company_trucks_path(@user), frame: 'trucks', company: @user%>
    <!-- Reviews -->
    <%= render 'feedbacks/reviews/form' if client_signed_in?%>
    <!-- Comments section-->
    <%= render 'feedbacks/comments/comments_section'%>
<% end %>