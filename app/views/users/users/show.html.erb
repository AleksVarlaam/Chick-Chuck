<% currently_at @user.title %>
<% provide :page_title, @user.title %>
<% provide :nav_title, @user.title %>

<%= turbo_stream_from @user%>

<%= tag.section class: "grid grid-flow-row auto-rows-max flex w-full px-2 lg:px-6" do %>
    <!-- About company section -->
    <%= tag.div (render 'companies/shared/company', company: @user), class: 'mb-3 pt-3 col-span-full' %>
    <!-- Global rating -->
    <%= render 'feedbacks/reviews/global_ratings', company: @user%>
    <!-- Revies section -->
    <%= render 'feedbacks/reviews/reviews_section' %>
<% end %>